<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8ff"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/White"
        android:orientation="vertical"
        android:padding="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to selection"
                android:id="@+id/button2"
                android:layout_weight="0.06" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.76"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="             BRC staff sign in/ sign out"
                android:textSize="30sp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:id="@+id/user_selection"
                android:layout_gravity="left" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:foregroundGravity="bottom"
            android:gravity="center|center_horizontal"
            android:layout_marginLeft="100dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:foregroundGravity="bottom"
                android:gravity="center|center_horizontal"
                >
                <ImageView
                    android:id="@+id/grid_item_image"
                    android:layout_width="308dp"
                    android:layout_height="298dp"
                    android:src= "@drawable/new_image"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:paddingTop="5dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="take new picture"
                android:id="@+id/button3"
                android:layout_gravity="center_horizontal|bottom" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:foregroundGravity="bottom"
                android:gravity="center|center_horizontal"
                >
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Hello Duncan Bloggs"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last Signed In:"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="30sp"
                    android:textIsSelectable="true"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:layout_marginTop="15dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thusday 20th March"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="30sp"
                    android:textIsSelectable="true"
                    android:layout_gravity="left" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="30sp"
                    android:layout_gravity="left"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not in the building"
                    android:foregroundGravity="center_horizontal"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:textSize="30sp"
                    android:textIsSelectable="true"
                    android:layout_gravity="left" />

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="740dp"
            android:layout_height="142dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:foregroundGravity="bottom"
            android:gravity="center|center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:foregroundGravity="bottom"
            android:gravity="center|center_vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:text="           Please click to Sign In"
                android:gravity="center|center_vertical"
                android:textSize="30sp"
                android:textIsSelectable="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:foregroundGravity="center"
                android:layout_weight="0" />
            <Button
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:text="SIGN IN"
                android:id="@+id/button4"
                android:textStyle="bold"
                android:layout_gravity="center|bottom"
                android:foregroundGravity="center|center_vertical"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.50"
                android:textAlignment="center"
                android:layout_marginLeft="40dp" />
        </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="877dp"
            android:layout_height="142dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:weightSum="1"
            android:foregroundGravity="bottom"
            android:gravity="center|center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:foregroundGravity="bottom"
                android:gravity="center|center_vertical">


            <TextView
                android:layout_width="836dp"
                android:layout_height="73dp"
                android:text="     I am actually inside the building, so i need to sign out"
                android:gravity="center|center_vertical"
                android:textSize="30sp"
                android:textIsSelectable="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:foregroundGravity="center" />
            <Button
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:text="SIGN OUT"
                android:id="@+id/button4"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal|bottom"
                android:foregroundGravity="left"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.33"
                android:textAlignment="center"
                android:gravity="center|center_vertical"
                android:layout_marginLeft="-30dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
